<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiCommunityToolkit.ReproductionSample.PopupFillBug.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Padding="30,100" Spacing="25">

        <Label Style="{StaticResource Headline}" Text="Fill Bug" />
        <Label Style="{StaticResource SubHeadline}" Text="Reproduction Sample" />
        <Button
            x:Name="OpenPopupBtn"
            Clicked="OpenPopupBtn_Clicked"
            HorizontalOptions="Fill"
            Text="Open Popup" />
        <Button
            x:Name="OpenPopupWithWorkaroundBtn"
            Clicked="OpenPopupWithWorkaroundBtn_Clicked"
            HorizontalOptions="Fill"
            Text="Open Popup with Workaround" />
    </VerticalStackLayout>

</ContentPage>
